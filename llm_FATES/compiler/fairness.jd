justification fairness_implementation {
    conclusion fairness_implemented is "Fairness is implemented"
    strategy fairness_impl_methods is "Implementing fairness within model"
    sub-conclusion multi_ling_DS_present is "Multilingual dataset is used"
    strategy training is "Training model using the Multilingual dataset"
    evidence multi_ling_DS is "Multilingual dataset is present"
    evidence training_code is "Training code is present"
    fairness_impl_methods supports fairness_implemented
    multi_ling_DS_present supports fairness_impl_methods
    training supports multi_ling_DS_present
    multi_ling_DS supports training
    training_code supports training
}




justification fairness_evaluation {
    conclusion fairness_evaluated is "Fairness is evaluated"
    strategy fairness_exe_methods is "Executing fairness benchmarks"
    sub-conclusion multi_ling_BM_accept is "Multilingual benchmark metric is acceptable"
    sub-conclusion BBQ_BM_accept is "BBQ benchmark metric is acceptable"
    strategy testing_multi_ling is "Evaluating model using the multilingual benchmark"
    strategy testing_BBQ is "Evaluating model using the BBQ benchmark"
    evidence multi_ling_BM is "Multilingual benchmark is present"
    evidence evaluated_code is "Evaluation code is present"
    evidence BBQ_BM is "BBQ benchmark is present"
    fairness_exe_methods supports fairness_evaluated
    multi_ling_BM_accept supports fairness_exe_methods
    BBQ_BM_accept supports fairness_exe_methods
    testing_multi_ling supports multi_ling_BM_accept
    testing_BBQ supports BBQ_BM_accept
    multi_ling_BM supports testing_multi_ling
    evaluated_code supports testing_multi_ling
    evaluated_code supports testing_BBQ
    BBQ_BM supports testing_BBQ
}

composition {
    justification final is assemble(fairness_implementation, fairness_evaluation) {
        conclusionLabel: "Fairness has been correctly integrated"
        strategyLabel: "Combining fairness implementations/evaluations"
    }
}



